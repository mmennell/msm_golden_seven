<h1>Movies</h1>

<p><a href="/movies/new_form">Add a New Movie</a></p>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <!-- Add in each statement -->
        <% @movies.each do |movie| %>

      <tr>
        <td><img src="<%= movie.image_url %>" width="80"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %> mins</td>
        <td><%= movie.description %></td>
        <td>
          <a href="/movies/<%= movie.id %>">
            View
          </a>
        </td>
        <td>
          <a href="/movies/<%= movie.id %>/edit_form">
            Edit
          </a>
        </td>
        <td>
          <a href="/delete_movie/<%= movie.id %>">
            Delete
          </a>
        </td>
      </tr>
          <% end %>
    </tbody>

    <!-- end each statement -->

  </table>
